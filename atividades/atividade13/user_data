echo '<!DOCTYPE html>

<html>
	<head>
		<meta charset="UTF-8">
		<title>Atividade 12</title>
	</head>
	<body>
		<h1>Andr√© Felipe de Oliveira Sousa</h1>
		<h2>510334</h2>
	</body>
</html>' > /data/html/index.html

